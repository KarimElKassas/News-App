<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        style="@style/CardView.Light"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_8sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:background="#FDFDFD">
            <ImageView
                android:id="@+id/item_news_image"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_90sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ana"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_4sdp"/>
            <TextView
                android:id="@+id/item_news_source"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/item_news_image"
                app:layout_constraintStart_toStartOf="@id/item_news_image"
                android:layout_marginTop="@dimen/_12sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="#000"
                android:text="Source"
                android:maxLines="1"
                app:layout_constraintWidth_max="@dimen/_110sdp"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/item_news_published"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/item_news_source"
                app:layout_constraintStart_toStartOf="@id/item_news_image"
                android:layout_marginTop="@dimen/_6sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="#000"
                android:text="published at"
                android:maxLines="1"
                app:layout_constraintWidth_max="@dimen/_110sdp"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/item_news_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/item_news_image"
                app:layout_constraintStart_toEndOf="@id/item_news_image"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_8sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp"
                android:textColor="#000"
                android:text="Post Title"
                android:maxLines="3"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/item_news_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/item_news_title"
                app:layout_constraintStart_toEndOf="@id/item_news_image"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="#000"
                android:text="Post Description "
                android:maxLines="5"
                android:ellipsize="end"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>